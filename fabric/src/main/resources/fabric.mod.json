{
  "schemaVersion": 1,
  "id": "${mod_id}",
  "version": "${version}",

  "name": "${mod_display_name}",
  "description": "${mod_description}",
  "authors": [
    "${mod_author}"
  ],
  "contact": {
    "homepage": "${homepage_url}",
    "sources": "${sources_url}",
    "issues": "${issues_url}"
  },

  "license": "${license}",
  "icon": "${logo_fabric}",

  "environment": "*",
  "entrypoints": {
    "main": [
      "com.mythicmetals.bridges.FabricMain"
    ],
    "bridges_module": [
      "com.mythicmetals.bridges.content.mythicmetals.MythicMetalsBridge"
    ]
  },
  "__mixins": [
    "${mod_id}-fabric.mixins.json",
    "${mod_id}-common.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=${fabric_loader_version}",
    "minecraft": ">=${minecraft_version}",
    "java": ">=${java_version}",
    "fabric-api": "*"
  }
}